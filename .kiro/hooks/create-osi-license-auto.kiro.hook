{
  "enabled": true,
  "name": "CREATE OSI LICENSE AUTO",
  "description": "Automatically creates or updates an OSI-compliant license file when project configuration files are modified",
  "version": "1",
  "when": {
    "type": "userTriggered",
    "patterns": [
      "package.json",
      "README.md",
      "LICENSE"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Create or update an OSI-compliant license file (LICENSE) for this project. Choose an appropriate OSI license based on the project type and existing configuration. If a LICENSE file already exists, review it to ensure it's OSI-compliant and properly formatted. Consider common licenses like MIT, Apache 2.0, or GPL based on the project's nature."
  }
}